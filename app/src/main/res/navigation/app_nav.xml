<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/splashPage">

    <fragment
        android:id="@+id/splashPage"
        tools:layout="@layout/fragment_splash_page"
        android:name="com.example.covid19.presenter.screen.splash.SplashPage"
        android:label="SplashPage" >
        <action
            android:id="@+id/splashToMain"
            app:destination="@id/mainPage" />
    </fragment>
    <fragment
        android:id="@+id/mainPage"
        tools:layout="@layout/fragment_main_page"
        android:name="com.example.covid19.presenter.screen.main.MainPage"
        android:label="MainPage" />
</navigation>